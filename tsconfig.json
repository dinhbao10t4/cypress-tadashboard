{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "types": [
      "node",
      "cypress", 
      "cypress-xpath",
      "cypress-real-events"
    ],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts"
  ]
}